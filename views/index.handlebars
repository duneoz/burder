<div class="container">
	<div class="jumbotron">
		<img src="http://theburgeradventure.com/wp-content/uploads/2015/03/The_Burger_Adventure-BadBoys.jpg" width="auto" height="auto">
		<h1>Eat sum Burders!!!</h1>
	</div>
	

	<div class="row">

	<div class="col-md-4 col-md-offset-1">
	 <div class="panel-panel default">
	 	<h1>Ready to Eat the Burder</h1>
	 	<ul class="list-group">
	 		{{#each burders}}
	 		 {{#unless this.devoured}}
	 		 <li class="list-group-item">
	 		  <div class="input-group">
	 		  	<p class="lead">{{this.burder_name}}</p>
	 		  	<span class="input-group-btn">

	 		  		<form action="burders/update/{{this.id}}?_method=PUT" method="POST">
	 		  			<input type="hidden" name="devoured" value="1">
	 		  			<button class="btn btn-default btn-lg" type="submit">Devour it!</button>
	 		  		</form>
	 		  	</span>
	 		  </div>
	 		 </li>
	 		 {{/unless}}
	 		{{/each}}
	 	</ul>

	 </div>
	</div>

	
	<div class="row">
		<div class="col-md-4 col-md-offset-2">
			<h1>Devoured sum Burders</h1>
			<div class="panel panel-default">
				<ul class="list-group">
					{{#each burders}}
					 {{#if this.devoured}}
					 <li class="list-group-item">
					 	<p class="lead">{{this.burder_name}}</p>
					 </li>
					 {{/if}}
					  {{/each}}
				</ul>
			</div>
		</div>
	</div>

	<div class="col-md-10 col-md-offset-1">
		<p class="lead">type a new burder & click submit</p>
		
		<form class="create-update-form" action="burders/create" method="POST">
		 <div class="form-group">
		 	<textarea class="form-control input-lg" type="text" name="burder_name" row="3"></textarea>
		 </div>
		 <button class="btn btn-default btn-lg" type="submit">Submit</button>
		</form>
	</div>

 </div>
</div>